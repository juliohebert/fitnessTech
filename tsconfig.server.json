{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "./dist/server",
    "rootDir": "./",
    "noEmit": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowImportingTsExtensions": false
  },
  "include": [
    "api/**/*",
    "src/server.ts",
    "src/middleware/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}
